::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.home_srocll {
  width: 100%;
  height: 100%;
}

.scroll_bg {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.scroll_bg_content {
  position: relative;
  width: 100%;
  height: 100%;
}
.scroll_bg_content image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.scroll_bg_content view {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.content {
  margin: 0 30rpx;
  color: white;
}