.content{
  width: 100%;
  flex: 1;
  position: relative;
}

.content image {
  width: 100%;
  height: 100%;
}

.hover_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.user_info {
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  color: white;
  letter-spacing: 4rpx;
  font-size: 30rpx;
}
.user_info view {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  border: 2rpx solid white;
  border-radius: 30rpx;
}

.foot{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foot_content {
  font-size: 50rpx;
  color: #838383;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 2rpx;
}
.foot_content image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
