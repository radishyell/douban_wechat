
/* 默认的整体宽度 */

.default_width {
  width: 690rpx;
}

/* 默认主题颜色 */
.default_color {
  color: #0093dd;
}
.default_bg_color {
  background: #0093dd;
}

/* 默认黑色字体颜色 */
.default_font {
  color: #333333;
}

/* 默认灰色字体颜色 */
.default_gray_font {
  color: #999999;
}


/* 我的页面中默认的每个cell的高度 */
.single_cell_height {
  height: 102rpx;
}

.container {
  background: #d7d7d7;
  display: block;
}

.group {
  background: white;
  margin-top: 30rpx;
  width: 100%;
}

.head {
  width: 100%;
  height: 349rpx;
  position: relative;
}

.head_blue {
  width: 100%;
  height: 240rpx;
}

.head_content {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  top: 100rpx;
  left: 0rpx;
}

.name_outcontent {
  position: relative;
}

.name_content {
  position: absolute;
  width: 100%;
  top: 0rpx;
  left: 0rpx;
  text-align: center;
  font-size: 20rpx;
}

.name_content image {
  width: 143rpx;
  height: 143rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  margin-top: -71rpx;
}

.name_title {
  font-size: 36rpx;
}

.head_bg {
  width: 100%;
}

.single {
  border-bottom: 1px solid #f2f2f2;
  margin: 0rpx auto;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.single image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}