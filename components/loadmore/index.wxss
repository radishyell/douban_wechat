.loadmore {
	height: 35rpx;
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.loadmore text {
	font-size: 13rpx;
	color: #bfbfbf;
	font-weight: bold;
}

.icon {
	width: 25rpx;
	height: 25rpx;
	margin-right: 10rpx;
}

.active {
	animation: weuiLoading 0.6s steps(12, end) infinite;
}

@keyframes weuiLoading {
	0% {
		transform: rotate3d(0, 0, 1, 0deg);
	}
	100% {
		transform: rotate3d(0, 0, 1, 360deg);
	}
}