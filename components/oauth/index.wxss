.oauth_content {
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    text-align: center;
    letter-spacing: 2rpx;
    background: rgba(0, 0, 0, 0.8);
    
}

.content {
    width: 500rpx;
    height: 420rpx;
    background: white;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
}

.logo{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo_image {
    width: 70rpx;
    height: 70rpx;
}



.logo_title {
    margin: 0 auto;
    font-size: 27rpx;
    text-align: left;
    width: 80%;
}

.logo_des {
    margin: 10rpx auto 0rpx auto;
    font-size: 20rpx;
    text-align: left;
    width: 80%;
    color: #999999;
}


.btn_content {
    display: flex;
    justify-content: space-around;
    width: 90%;
    margin: 40rpx auto 60rpx auto;
}

.single_btn {
    letter-spacing: 2rpx;
    width: 190rpx;
    height: 60rpx;
    border-radius: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: 25rpx;
    line-height: 60rpx;
}

.phone {
    background: #232227;
}

.cancel {
    background: #999999;
}


.custom_btn {
    display: inline;
    border: none;
    outline: none;
    border-radius: 0rpx;
    background: transparent;
    margin: 0rpx;
    padding: 0rpx;
}

.custom_btn::after {
    border: none;
    outline: none;
    margin: 0rpx;
    padding: 0rpx;
}